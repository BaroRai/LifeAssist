<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity"
    android:id="@+id/drawer_layout">

    <!-- Main Content Area -->
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Scrollable Content -->
        <RelativeLayout
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/mainScreenText"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:maxLines="1"
                    android:text="Main screen"
                    android:textSize="18sp"
                    android:paddingLeft="16dp"
                    android:background="@drawable/rect_bg"/>

                <ImageButton
                    android:id="@+id/hamburger_menu_button"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="end"
                    android:background="@android:color/transparent"
                    android:contentDescription="Menu"
                    android:src="@drawable/baseline_density_medium_24" />
            </LinearLayout>

            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_below="@+id/mainScreenText"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="16dp"
                android:text="Description"
                android:textSize="16sp"
                android:background="@drawable/rect_bg"/>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/descriptionTextView"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:layout_marginBottom="30dp"
                android:contentDescription="Goals content"
                android:background="@drawable/rect_bg">

                <!-- LinearLayout inside ScrollView to display the goals -->
                <LinearLayout
                    android:id="@+id/goalsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- Goals will be added dynamically here -->
                </LinearLayout>
            </ScrollView>

        </RelativeLayout>

        <!-- Floating Action Button to open the popup -->
        <ImageButton
            android:id="@+id/openPopupButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="10dp"
            android:layout_gravity="bottom|left"
            android:background="@android:color/transparent"
            android:contentDescription="Menu"
            android:src="@drawable/baseline_edit_note_24" />
    </FrameLayout>

    <!-- Drawer: Custom Layout with Menu Items -->
    <LinearLayout
        android:id="@+id/navDrawer"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:paddingTop="56dp">

        <!-- Username and Description in Drawer -->
        <TextView
            android:id="@+id/usernameTextViewDrawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="16dp" />

        <!-- Simple Navigation Items -->
        <TextView
            android:id="@+id/nav_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:clickable="true"
            style="@style/MenuItemStyle" />

        <TextView
            android:id="@+id/nav_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            style="@style/MenuItemStyle" />

        <TextView
            android:id="@+id/nav_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            style="@style/MenuItemStyle" />

        <TextView
            android:id="@+id/nav_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:clickable="true"
            android:focusable="true"
            style="@style/MenuItemStyle" />
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
