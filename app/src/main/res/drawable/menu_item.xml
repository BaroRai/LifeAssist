<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When the item is pressed or clicked -->
    <item android:state_pressed="true" android:drawable="@android:color/darker_gray">
        <shape>
            <solid android:color="#D3D3D3"/>  <!-- Light gray background when pressed -->
            <stroke android:color="#B0B0B0" android:width="1dp"/>  <!-- Light gray border -->
            <corners android:radius="4dp"/>  <!-- Rounded corners -->
        </shape>
    </item>
    <!-- Normal state -->
    <item>
        <shape>
            <solid android:color="#FFFFFF"/>  <!-- White background by default -->
            <stroke android:color="#D3D3D3" android:width="1dp"/>  <!-- Light gray border -->
            <corners android:radius="4dp"/>  <!-- Rounded corners -->
        </shape>
    </item>

</selector>