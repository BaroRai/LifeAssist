<!-- res/drawable/rect_bg.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fill color for inside area -->
    <solid android:color="#33CCD9D7" /> <!-- Light grey fill -->

    <!-- Border color and width -->
    <stroke
        android:color="#000000"
    android:width="2dp" />

    <!-- Rounded corners -->
    <corners android:radius="15dp" />

    <!-- Shadow effect for the border -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
</shape>
